{
    "definitions": {
        "schemas": {
            "tcp": {
                "type": "object",
                "properties": {
                    "protocol": {
                        "type": "string",
                        "enum": ["TCP"]
                    },
                    "min_port": {
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 65535
                    },
                    "max_port": {
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 65535
                    },
                    "bidirectional": {
                        "type": "boolean",
                        "default": false
                    }
                }
            },
            "udp": {
                "type": "object",
                "properties": {
                    "protocol": {
                        "type": "string",
                        "enum": ["UDP"]
                    },
                    "min_port": {
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 65535
                    },
                    "max_port": {
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 65535
                    },
                    "bidirectional": {
                        "type": "boolean",
                        "default": false
                    }
                }
            },
            "icmp": {
                "type": "object",
                "properties": {
                    "protocol": {
                        "type": "string",
                        "enum": ["ICMP"]
                    },
                    "type": {
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 255
                    },
                    "code": {
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 254
                    },
                    "bidirectional": {
                        "type": "boolean",
                        "default": false
                    } 
                }
            },
            "protocol": {
                "oneOf": [
                    {"$ref": "#/definitions/schemas/tcp"},
                    {"$ref": "#/definitions/schemas/udp"},
                    {"$ref": "#/definitions/schemas/icmp"}
                ]
            },
            "connections": {
                "type": "array",
                "description": "List of allowed protocols",
                "items": {"$ref": "#/definitions/schemas/protocol"}
            },
            "endpoint": {
                "type": "object",
                "properties":{
                    "name": {"type": "string"},
                    "type": {"type": "string"}
                }
            }
        }
        
    }
}